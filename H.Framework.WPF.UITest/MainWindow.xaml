            Margin="129,108,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsShowText="False"
            Text="2" />
        <extender:SearchBox
            Width="130"
            Height="22"
            Margin="72,23,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFf3f3f3"
            CaneclFontFamily="Webdings"
            Foreground="White"
            Visibility="{Binding SBVisibility, Mode=TwoWay}"
            Watermark="搜索" />
        <extender:ImageButton
            Width="16"
            Height="15"
            Margin="0,23,238,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="ImageButton_Click"
            CoverImageSource="pack://application:,,,/s_emoji.png"
            ImageSource="pack://application:,,,/i_emoji.png" />
        <extender:ExpanderEx
            Width="100"
            Height="26"
            Margin="502,92,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Header="ExpanderEx"
            IsExpanded="False">

            <Grid Background="#FFE5E5E5">
                <TextBlock Text="aaaaa" />
            </Grid>
        </extender:ExpanderEx>

        <extender:ButtonEx
            Width="15"
            Height="15"
            Margin="23,61,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="r"
            FontFamily="Marlett" />

        <extender:WarnBlock
            Name="warmBlock"
            Margin="0,131,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
    </Grid>
</Window>